@{
    ViewBag.Title = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Click the button below to call the secure API:</p>
    <form method="post" action="/Home/CallApi">
        <button type="submit" class="btn btn-primary">Call API</button>
    </form>
    <div>
        @if (ViewBag.ApiResponse != null)
        {
            <p>API Response: @ViewBag.ApiResponse</p>
        }
    </div>
</div>
